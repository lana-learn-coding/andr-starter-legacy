<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingTop="20dp"
    tools:context=".FormActivity">

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_city"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/select_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/field_weather"
            android:inputType="none" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_txt_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_note"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_txt_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/field_temp"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="ThÃªm"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500" />

    </LinearLayout>

</LinearLayout>